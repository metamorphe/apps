<%= form_for @digital_model, :html => {:multipart => true} do |f| %>
  <% if @digital_model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@digital_model.errors.count, "error") %> prohibited this digital_model from being saved:</h2>

      <ul>
      <% @digital_model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :design_id %><br>
    <%= select("digital_model", "design_id", Design.all.collect {|p| [ "#{p.name} by #{p.author.name}", p.id ] }, {}, :class => "form-control") %>
  </div>
  <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control"%>
    </div>
  <div class="field">
    <%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :bump_map %><br>
    <%= f.file_field :bump_map, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :base_height %><br>
    <%= f.text_field :base_height, class: "form-control", value: @digital_model.base_height or 2.0%>
  </div>
  <div class="field">
    <%= f.label :displacement %><br>
    <%= f.text_field :displacement, class: "form-control", value: @digital_model.displacement or 2.0%>
  </div>
  <div class="field">
    <%= f.label :height.to_s + " (mm)" %><br>
    <%= f.text_field :height, class: "form-control", value: @digital_model.height or 70%>
  </div>
  <div class="field">
    <%= f.label :width.to_s + " (mm)" %><br>
    <%= f.text_field :width, class: "form-control", value: @digital_model.width or 70%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit :class=>"btn btn-danger"%>
  </div>
<% end %>
