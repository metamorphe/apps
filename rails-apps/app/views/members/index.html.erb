<h1>Listing members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Role</th>
      <th>Location</th>
      <th>Twitter handle</th>
      <th>Website</th>
      <th>Default license</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.image %></td>
        <td><%= member.role %></td>
        <td><%= member.location %></td>
        <td><%= member.twitter_handle %></td>
        <td><%= member.website %></td>
        <td><%= member.default_license %></td>
        <td><%= member.description %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

