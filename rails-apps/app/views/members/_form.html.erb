<%= form_for @member, :html => {:multipart => true}  do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class="col-xs-12 col-sm-6">
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, :class=>"form-control" %>
        </div>
        <div class="field">
          <label> Profile Image </label><br>
          <%= image_tag @member.image_url %>
          <%= f.file_field :image, :class => "form-control" %>
        </div>
        
      <div class="field">
        <%= f.label "About Me" %><br>
        <%= f.text_area :description, :class=>"form-control" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="field">
        <%= f.label :location %><br>
        <%= f.text_field :location, :class=>"form-control" %>
      </div>
      <div class="field">
        <%= f.label :twitter_handle %><br>
        <%= f.text_field :twitter_handle, :class=>"form-control" %>
      </div>
      <div class="field">
        <%= f.label :website %><br>
        <%= f.text_field :website, :class=>"form-control" %>
      </div>
      <div class="field">
        <%= f.label :default_license %><br>
        <%= select("member", "default_license", get_licenses, {}, :class => "form-control") %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="actions">
     <%= f.submit "Update",:class=> "btn btn-primary"%>
     <%= link_to 'Cancel', @member, :class=> "btn btn-default" %>
    </div>
  </div>
<% end %>

