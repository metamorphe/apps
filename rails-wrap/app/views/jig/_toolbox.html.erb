<div id="calibration-toolbox" class="toolbox shadowed">
   <div class="row">
   <div class="col-xs-8">
      <label class="text-shadowed"> CALIBRATE MATERIAL SHEET RESISTANCE</label>
    </div>
    <div class="col-xs-4">
     <label class="info pull-right text-shadowed"> 
      <!-- Button trigger modal -->
      <span id="calibration-info" data-toggle="modal" data-target="#myModal" class="glyphicon glyphicon-info-sign" title="How do I measure sheet resistance?"></span>
     </label>
   </div>
   </div>
    <form id="sheet-resistance" class="input-group">
      <input type="text" class="form-control" placeholder="Measure Î© of 0.25 inch square (default 0.5).">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary" type="button">SAVE</button>
      </span>
    </form>
</div>

<!-- CANVAS TOOLS -->
<div id="canvas-toolbox" class="toolbox shadowed">
   <label class="text-shadowed"> CANVAS </label>
          
          <%= button_tag :id => "transform-tool", :class => "btn btn-lg btn-ellustrator" do %>
            <span class="glyphicon glyphicon-hand-up"></span>
          <% end %>
          <!-- PAN AND HOME -->
          <div class="btn-group" role="group" id="zoom-ui" aria-label="zoom-tools">
              <%= button_tag :id => "canvas-pan-tool", :class => "btn btn-lg btn-ellustrator" do %>
                <span class="icon-pan"></span>
              <% end %>   

               <%= button_tag :id=>"homing", :class=>"btn btn-lg btn-ellustrator" do %>
                <span class="icon-homing"></span>
              <% end %>
          </div>
</div>

<div id="circuit-toolbox" class="toolbox shadowed">
     <label> CIRCUIT LAYER </label>
    
      <!-- PATH TOOLS -->
      <div class="btn-group" role="group" aria-label="pen-tools">
        <%= button_tag :id => "path-tool", :class => "btn btn-lg btn-ellustrator" do %>
        <span class="icon-path"></span>
        <% end %>
      </div>
      
      <!-- REMOVE ITEMS -->
      <%= button_tag :id=>"remove-element", :class=>"btn btn-lg btn-ellustrator" do %>
        <span class="icon-delete-path"></span>
      <% end %>
      
        <!-- BRUSH SIZE BUTTONS -->
      <div class="btn-group" role="group" aria-label="pen-tools">
        <%= button_tag :id => "brush-size-increase", :class => "btn btn-lg btn-ellustrator" do %>
        <span class="icon-brush-size-increase"></span>
        <% end %>
        <%= button_tag :id => "brush-size-decrease", :class => "btn btn-lg btn-ellustrator" do %>
        <span class="icon-brush-size-decrease"></span>
        <% end %>
      </div> 
  </div>   


