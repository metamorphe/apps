<div id="calibration-toolbox" class="toolbox shadowed">
   <div class="row">
   <div class="col-xs-8">
      <label class="text-shadowed"> CALIBRATE MATERIAL SHEET RESISTANCE</label>
    </div>
    <div class="col-xs-4">
     <label class="info pull-right text-shadowed"> 
      <!-- Button trigger modal -->
      <span id="calibration-info" data-toggle="modal" data-target="#myModal" class="glyphicon glyphicon-info-sign" title="How do I measure sheet resistance?"></span>
     </label>
   </div>
   </div>
    <form id="sheet-resistance" class="input-group">
      <input type="text" class="form-control" placeholder="Measure Î© of 0.25 inch square (default 0.5).">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary" type="button">SAVE</button>
      </span>
    </form>
</div>

<!-- CANVAS TOOLS -->
<div id="canvas-toolbox" class="toolbox shadowed">
   <!-- <label class="text-shadowed"> CANVAS </label> -->
          
          <%= button_tag :id => "transform-tool", :class => "btn touch-btn-lg btn-ellustrator" do %>
            <span class="touch-glyph glyphicon glyphicon-hand-up"></span>
             <label id="select-label"> SELECT </label>
          <% end %>
          <!-- PAN AND HOME -->
          <!-- <div class="btn-group" role="group" id="zoom-ui" aria-label="zoom-tools"> -->
              <%= button_tag :id => "canvas-pan-tool", :class => "btn touch-btn-120 touch-btn-md btn btn-lg btn-ellustrator" do %>
                <span class="icon-pan"></span>
              <% end %>   

               <%= button_tag :id=>"homing", :class=>"btn touch-btn-150 touch-btn-md btn btn-lg btn-ellustrator" do %>
                <span class="icon-homing"></span>
              <% end %>
          <!-- </div> -->
</div>

<div id="circuit-toolbox" class="toolbox shadowed">
     <!-- <label> CIRCUIT LAYER </label> -->
    
      <!-- PATH TOOLS -->
      <div class="btn-group" role="group" aria-label="pen-tools">
        <%= button_tag :id => "path-tool", :class => "btn touch-btn-lg btn-ellustrator" do %>
        <span class="touch-icon-path"></span> 
        <label> CIRCUIT </label>
        <% end %>
      </div>
      
      <!-- REMOVE ITEMS -->
      <%= button_tag :id=>"remove-element", :class=>"btn touch-btn-md touch-btn-60 btn-ellustrator" do %>
        <span class="glyphicon glyphicon-ban-circle"></span>
        <!-- <span class="icon-delete-path"></span> -->
      <% end %>
      
        <!-- BRUSH SIZE BUTTONS -->
      <!-- <div class="btn-group" role="group" aria-label="pen-tools"> -->
      <%= button_tag :id => "brush-size-label", :class => "btn touch-btn-num touch-btn-md " do %>
        2
        <% end %>
        <%= button_tag :id => "brush-size-increase", :class => "btn touch-btn-30 touch-btn-md btn-ellustrator" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <!-- <span class="icon-brush-size-increase"></span> -->
        <% end %>
        <%= button_tag :id => "brush-size-decrease", :class => "btn touch-btn-45 touch-btn-md btn-ellustrator" do %>
        <!-- <span class="icon-brush-size-decrease"></span> -->
         <span class="glyphicon glyphicon-minus"></span>
        <!-- <span class="icon-brush-size-decrease"></span> -->
        <% end %>
      <!-- </div>  -->
  </div>   
  
<div id="dev-toolbox" class="toolbox shadowed">
   <label class="text-shadowed"> DEV TOOLS </label>
      <div class="btn-group" role="group" aria-label="pen-tools">
      
      <%= button_tag :id => "dev-tool-1", :class => "btn btn-ellustrator" do %>
        <span class="glyphicon glyphicon-backward"></span>
      <% end %>

      <%= button_tag :id => "dev-tool-2", :class => "btn btn-ellustrator" do %>
        <span class="glyphicon glyphicon-cog"></span>
      <% end %>

      <%= button_tag :id => "dev-tool-3", :class => "btn btn-ellustrator" do %>
         <span class="glyphicon glyphicon-forward"></span>
      <% end %>   
      <%= button_tag :id => "dev-tool-4", :class => "btn btn-ellustrator" do %>
         <span class="glyphicon glyphicon-record"></span>
      <% end %>
      </div>
      <div class='btn-group'>
      <%= button_tag :id=>"zoom-out", :class=>"btn btn-md btn-ellustrator" do %>
          <span class="glyphicon glyphicon-zoom-out"></span>
        <% end %>

          
        
        <%= button_tag :id=>"zoom-in", :class=>"btn btn-md btn-ellustrator" do %>
            <span class="glyphicon glyphicon-zoom-in"></span>
        <% end %>
    </div>
</div>

<div id="on-it">
