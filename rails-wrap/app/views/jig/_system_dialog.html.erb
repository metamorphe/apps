
<script>

function SystemMessageManager(dom){
	this.dom = dom;
	this.journal = [];
	this.index = 0;
	this.show("System has loaded.");
}
SystemMessageManager.prototype = {
	log: function(msg){
		this.journal.push(msg);
		this.index ++;

		this.dom.html(this.journal.slice(0).reverse().join("<br/>"));
	},
	show: function(msg){
		// this.journal.push(msg);
		this.journal[this.journal.length - 1] = msg;
		// this.index ++;
		this.dom.html(this.journal[this.journal.length - 1]);
	}, 
	prev: function(){
		if(this.index != 0) this.index --;
	},
	next: function(){
		if(this.index != this.journal.length -1)
		this.index ++;
	},
	alert: function(msg){
		var msg = '<div class="alert alert-danger alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><strong>Error!</strong> ' + msg +'</div>';
		this.show(msg);
	},
	clear: function(){
		this.dom.html();
	}
}
</script>
